<div class='page-header'>
  <h1> Review <%=@product.name %> </h1>
</div>

  <%= form_for([@product, @product_review ]) do |f| %>
        <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
        </p>

        <p>
        <%= f.label :description %>
        <%= f.text_field :description %>
        </p>

        <p>
        <%= f.label :rating %>
        <%= f.select(:rating, (1..10).to_a) %>
        </p>

      <%= f.submit %>

  <% end %>
